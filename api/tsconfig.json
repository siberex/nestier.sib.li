{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@nestier/interceptors/*": ["./interceptors/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
